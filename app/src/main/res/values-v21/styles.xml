<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SystemBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--5.0开始需要设置为透明颜色，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ColorBarTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="ToolBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="actionOverflowMenuStyle">@style/ToolbarPopupTheme</item>
    </style>

    <style name="ToolbarPopupTheme" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!--设置改属性将 popup 弹出位于ToolBar下面-->
        <item name="overlapAnchor">false</item>
    </style>
</resources>