<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="SystemBarTheme" parent="AppTheme">
    </style>

    <style name="ColorBarTheme" parent="AppTheme">

    </style>

    <style name="ToolBarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">#ffffff</item>
        <item name="actionOverflowMenuStyle">@style/ToolbarPopupTheme</item>
    </style>

    <style name="ToolbarPopupTheme" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>
</resources>
